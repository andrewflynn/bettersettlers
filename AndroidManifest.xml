<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nut.bettersettlers"
    android:versionCode="17"
    android:versionName="3.1.0">
  <application android:icon="@drawable/icon"
      android:label="@string/better_settlers"
      android:theme="@style/BetterSettlersThemeSelector">
    <activity android:name="com.nut.bettersettlers.activity.MainActivity"
        android:label="@string/better_settlers">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <service android:name="com.nut.bettersettlers.iab.BillingService" />

    <receiver android:name="com.nut.bettersettlers.iab.BillingReceiver">
      <intent-filter>
        <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
        <action android:name="com.android.vending.billing.RESPONSE_CODE" />
        <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
      </intent-filter>
    </receiver>

  </application>

  <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="11" />

  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="com.android.vending.BILLING" />

  <supports-screens android:anyDensity="true"
      android:xlargeScreens="true"
      android:largeScreens="true"
      android:normalScreens="true"
      android:smallScreens="true" />
</manifest>