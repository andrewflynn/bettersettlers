<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/seafarers_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >
  
  <FrameLayout android:id="@+id/buy_all_container"
      android:layout_width="@dimen/seafarers_menu_width"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true">
    <ImageView android:id="@+id/buy_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sea_buy_all_button"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_gravity="right"/>
  </FrameLayout>
    
  <ScrollView android:id="@+id/seafarers_scroll"
      android:layout_width="420dp"
      android:layout_height="wrap_content"
      android:layout_above="@id/buy_all_container"
      android:layout_alignRight="@id/buy_all_container">
  <LinearLayout android:id="@+id/seafarers_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center">
    <TextView android:id="@+id/seafarers_intro"
      android:text="Get the new Seafarers of Catan maps! We're giving you the Heading for New Shores as a free map. Buy each other map for $.99 each or buy all 9 for just $2.99"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="13dp"
      android:paddingRight="13dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp" />
    <ImageView android:id="@+id/heading_for_new_shores_item"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:paddingLeft="13dp"
      android:paddingRight="13dp"
      android:paddingBottom="6dp"/>
  </LinearLayout>
  </ScrollView>
</RelativeLayout>